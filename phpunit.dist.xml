<?xml version="1.0"?>
<phpunit
    bootstrap="test/bootstrap.php"
    colors="true"
>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="Packfire">
            <directory suffix="Test.php">test/packfire</directory>
        </testsuite>
    </testsuites>
    <php>
        <const name="__ENVIRONMENT__" value="test" />
    </php>
</phpunit>
